@page "{id:guid}"
@model App.CMS.Pages.Admin.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Edit Category</h1>
        </div>

        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <form method="post" class="p-6 space-y-6">
                <div asp-validation-summary="All" class="text-red-600"></div>
                <input type="hidden" asp-for="Input.Id" />

                <div>
                    <label asp-for="Input.Name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input asp-for="Input.Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                    <span asp-validation-for="Input.Name" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Slug" class="block text-sm font-medium text-gray-700">Slug</label>
                    <input asp-for="Input.Slug" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                    <span asp-validation-for="Input.Slug" class="text-red-600 text-sm"></span>
                    <p class="mt-1 text-sm text-gray-500">URL-friendly identifier (lowercase, hyphens only)</p>
                </div>

                <div>
                    <label asp-for="Input.Description" class="block text-sm font-medium text-gray-700">Description</label>
                    <textarea asp-for="Input.Description" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
                    <span asp-validation-for="Input.Description" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.ParentCategoryId" class="block text-sm font-medium text-gray-700">Parent Category</label>
                    <select asp-for="Input.ParentCategoryId" asp-items="Model.ParentCategories" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                        <option value="">No parent (root category)</option>
                    </select>
                    <span asp-validation-for="Input.ParentCategoryId" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <div class="flex items-center">
                        <input asp-for="Input.IsActive" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                        <label asp-for="Input.IsActive" class="ml-2 block text-sm text-gray-900">Active</label>
                    </div>
                    <span asp-validation-for="Input.IsActive" class="text-red-600 text-sm"></span>
                </div>

                <div class="flex justify-end space-x-3">
                    <a asp-page="Index" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Cancel
                    </a>
                    <button type="submit" class="bg-indigo-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Update Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>