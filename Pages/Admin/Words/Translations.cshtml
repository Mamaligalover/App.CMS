@page "{id:guid}"
@model App.CMS.Pages.Admin.Words.TranslationsModel
@{
    ViewData["Title"] = "Manage Translations";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
        <div class="mb-6 flex justify-between items-center">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Manage Translations</h1>
                <p class="text-gray-600 mt-1">Word: <span class="font-semibold">@Model.Word.Term</span></p>
            </div>
            <a asp-page="Details" asp-route-id="@Model.WordId" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300 transition">Back to Details</a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-6">
                <p class="text-green-700">@TempData["Success"]</p>
            </div>
        }

        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <form method="post" class="p-6">
                <input type="hidden" asp-for="WordId" />

                <div class="space-y-8">
                    @for (int i = 0; i < Model.Input.Translations.Count; i++)
                    {
                        <div class="border rounded-lg p-4 bg-gray-50">
                            <input type="hidden" asp-for="Input.Translations[i].Language" />

                            <h3 class="text-lg font-semibold mb-4">
                                @Model.GetLanguageDisplayName(Model.Input.Translations[i].Language)
                            </h3>

                            <div class="grid grid-cols-1 gap-4">
                                <div>
                                    <label asp-for="Input.Translations[i].TranslatedText" class="block text-sm font-medium text-gray-700">
                                        Translated Text
                                    </label>
                                    <input asp-for="Input.Translations[i].TranslatedText"
                                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                                </div>

                                <div>
                                    <label asp-for="Input.Translations[i].Pronunciation" class="block text-sm font-medium text-gray-700">
                                        Pronunciation (Optional)
                                    </label>
                                    <input asp-for="Input.Translations[i].Pronunciation"
                                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                                </div>

                                <div>
                                    <label asp-for="Input.Translations[i].Definition" class="block text-sm font-medium text-gray-700">
                                        Definition
                                    </label>
                                    <textarea asp-for="Input.Translations[i].Definition"
                                              rows="3"
                                              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
                                </div>

                                <div>
                                    <label asp-for="Input.Translations[i].UsageExample" class="block text-sm font-medium text-gray-700">
                                        Usage Example (Optional)
                                    </label>
                                    <textarea asp-for="Input.Translations[i].UsageExample"
                                              rows="2"
                                              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
                                </div>

                                <div>
                                    <label asp-for="Input.Translations[i].Notes" class="block text-sm font-medium text-gray-700">
                                        Notes (Optional)
                                    </label>
                                    <textarea asp-for="Input.Translations[i].Notes"
                                              rows="2"
                                              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-6 flex justify-end space-x-3">
                    <a asp-page="Details" asp-route-id="@Model.WordId" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="bg-indigo-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-indigo-700">
                        Save Translations
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>