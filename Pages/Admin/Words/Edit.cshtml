@page "{id:guid}"
@model App.CMS.Pages.Admin.Words.EditModel
@{
    ViewData["Title"] = "Edit Word";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-7xl mx-auto">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Edit Word</h1>
        </div>

        <form method="post" class="space-y-6">
            <div asp-validation-summary="All" class="text-red-600 bg-red-50 p-4 rounded-lg"></div>
            <input type="hidden" asp-for="Input.Id" />

            <!-- Basic Word Information -->
            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:px-6 bg-gray-50">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Basic Information</h3>
                </div>
                <div class="px-4 py-5 sm:p-6 space-y-6">
                    <div>
                        <label asp-for="Input.Term" class="block text-sm font-medium text-gray-700">Term *</label>
                        <input asp-for="Input.Term" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                        <span asp-validation-for="Input.Term" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Input.CategoryId" class="block text-sm font-medium text-gray-700">Category *</label>
                            <select asp-for="Input.CategoryId" asp-items="Model.Categories" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                <option value="">Select a category</option>
                            </select>
                            <span asp-validation-for="Input.CategoryId" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Input.PartOfSpeech" class="block text-sm font-medium text-gray-700">Part of Speech</label>
                            <select asp-for="Input.PartOfSpeech" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                <option value="">Select...</option>
                                <option value="Noun">Noun</option>
                                <option value="Verb">Verb</option>
                                <option value="Adjective">Adjective</option>
                                <option value="Adverb">Adverb</option>
                                <option value="Pronoun">Pronoun</option>
                                <option value="Preposition">Preposition</option>
                                <option value="Conjunction">Conjunction</option>
                                <option value="Interjection">Interjection</option>
                            </select>
                            <span asp-validation-for="Input.PartOfSpeech" class="text-red-600 text-sm"></span>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Input.Status" class="block text-sm font-medium text-gray-700">Status</label>
                            <select asp-for="Input.Status" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                <option value="Draft">Draft</option>
                                <option value="Pending">Pending</option>
                                <option value="Published">Published</option>
                            </select>
                            <span asp-validation-for="Input.Status" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Input.Difficulty" class="block text-sm font-medium text-gray-700">Difficulty</label>
                            <select asp-for="Input.Difficulty" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                <option value="Easy">Easy</option>
                                <option value="Medium">Medium</option>
                                <option value="Hard">Hard</option>
                            </select>
                            <span asp-validation-for="Input.Difficulty" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Translations -->
            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:px-6 bg-gray-50">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Translations</h3>
                    <p class="mt-1 text-sm text-gray-600">Edit translations for different languages</p>
                </div>
                <div class="px-4 py-5 sm:p-6">
                    <!-- Tab Navigation -->
                    <div class="border-b border-gray-200">
                        <nav class="-mb-px flex space-x-8 overflow-x-auto" aria-label="Tabs">
                            @for (int i = 0; i < Model.Input.Translations.Count; i++)
                            {
                                var langIndex = i;
                                <button type="button"
                                        class="tab-button whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm @(i == 0 ? "border-indigo-500 text-indigo-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300")"
                                        data-tab="lang-@langIndex">
                                    @Model.GetLanguageDisplayName(Model.Input.Translations[langIndex].Language)
                                </button>
                            }
                        </nav>
                    </div>

                    <!-- Tab Contents -->
                    <div class="mt-4">
                        @for (int i = 0; i < Model.Input.Translations.Count; i++)
                        {
                            var langIndex = i;
                            <div class="tab-content @(i == 0 ? "" : "hidden")" data-tab-content="lang-@langIndex">
                                <input type="hidden" asp-for="Input.Translations[langIndex].Language" />

                                <div class="space-y-4">
                                    <div>
                                        <label asp-for="Input.Translations[langIndex].TranslatedText" class="block text-sm font-medium text-gray-700">
                                            Translated Text
                                        </label>
                                        <input asp-for="Input.Translations[langIndex].TranslatedText"
                                               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                                    </div>

                                    <div>
                                        <label asp-for="Input.Translations[langIndex].Pronunciation" class="block text-sm font-medium text-gray-700">
                                            Pronunciation
                                        </label>
                                        <input asp-for="Input.Translations[langIndex].Pronunciation"
                                               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                                    </div>

                                    <div>
                                        <label asp-for="Input.Translations[langIndex].Definition" class="block text-sm font-medium text-gray-700">
                                            Definition
                                        </label>
                                        <textarea asp-for="Input.Translations[langIndex].Definition"
                                                  rows="3"
                                                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
                                    </div>

                                    <div>
                                        <label asp-for="Input.Translations[langIndex].UsageExample" class="block text-sm font-medium text-gray-700">
                                            Usage Example
                                        </label>
                                        <textarea asp-for="Input.Translations[langIndex].UsageExample"
                                                  rows="2"
                                                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
                                    </div>

                                    <div>
                                        <label asp-for="Input.Translations[langIndex].Notes" class="block text-sm font-medium text-gray-700">
                                            Notes
                                        </label>
                                        <textarea asp-for="Input.Translations[langIndex].Notes"
                                                  rows="2"
                                                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-end space-x-3">
                <a asp-page="Index" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Cancel
                </a>
                <button type="submit" class="bg-indigo-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Update Word
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabContents = document.querySelectorAll('.tab-content');

            tabButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetTab = this.getAttribute('data-tab');

                    // Update button styles
                    tabButtons.forEach(btn => {
                        btn.classList.remove('border-indigo-500', 'text-indigo-600');
                        btn.classList.add('border-transparent', 'text-gray-500');
                    });
                    this.classList.remove('border-transparent', 'text-gray-500');
                    this.classList.add('border-indigo-500', 'text-indigo-600');

                    // Update content visibility
                    tabContents.forEach(content => {
                        if (content.getAttribute('data-tab-content') === targetTab) {
                            content.classList.remove('hidden');
                        } else {
                            content.classList.add('hidden');
                        }
                    });
                });
            });
        });
    </script>
}